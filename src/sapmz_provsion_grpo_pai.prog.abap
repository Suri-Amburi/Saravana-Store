MODULE USER_COMMAND_9001 INPUT.
  DATA(OK_CODE) = OK_9001.
  CLEAR :OK_9001.
  CASE OK_CODE.
    WHEN C_BACK OR C_CANCEL OR C_EXIT.
      PERFORM : CLEAR.
    WHEN C_ENTER.
      PERFORM GET_DATA.
    WHEN C_SAVE.
      PERFORM POST_DATA.
  ENDCASE.
ENDMODULE.
